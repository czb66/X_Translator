{
  "manifest_version": 3,
  "name": "X Translator",
  "version": "1.0.0",
  "description": "智能翻译扩展：自动识别输入场景，智能选择目标语言，支持一键替换",
  "homepage_url": "https://github.com/czb66/X_Translator",
  "privacy_policy": "https://czb66.github.io/X_Translator/privacy-policy.html",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
